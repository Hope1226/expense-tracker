<div class="main-categories-page">
  <div class="header category-header">
    <%= link_to raw(image_tag "backwards-arrow.svg"), category_path(params[:category_id]) %>
    <h2 class="main-headings">Add transaction</h2>
  </div>
  <div class="forms-container">
    <%=form_with(model: @entity, url: category_transactions_path, method: :post, local: true) do |f| %>
      <div class="field">
        <%= f.text_field :name, placeholder: "Transaction name" %>
      </div>

      <div class="field">
        <%= f.number_field :amount, placeholder: "Specify amount"%>
      </div>

      <%= f.hidden_field :user_id, value: current_user.id %> 
      <%= f.hidden_field :group_id, value: params[:category_id] %> 

      <div class="form-actions">
        <%= f.submit "Save transaction", class: "creator-btns" %>
        <%= link_to "Cancel", categories_path, class: 'delete-btns'%>
      </div>
    <% end %>
  </div>
</div>