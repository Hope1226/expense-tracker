<div class="forms-container">
  <h2>Update category</h1>
  <%=form_with(model: @entity, url: category_transaction_path, method: :put, local: true) do |f| %>
    <div class="field">
      <%= f.label(:name, "Name") %>
      <%= f.text_field :name, value: @transaction.name %>
    </div>

    <div class="field">
      <%= f.label "Enter amount" %><br />
      <%= f.number_field :amount, value: @transaction.amount %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %> 
    <%= f.hidden_field :group_id, value: params[:category_id] %> 

    <div class="form-actions">
      <%= f.submit "Save changes", class: "creator-btns" %>
  <% end %>
    <%= button_to "Delete this category", category_transaction_path(id: params[:id]), method: :delete %>
    </div>
</div>